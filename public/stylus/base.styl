/* mixins */
/border-radius ()
    -webkit-border-radius arguments
    -moz-border-radius arguments
    border-radius arguments

/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section {
    display: block;
}
body {
    line-height: 1;
}
blockquote, q {
    quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
    content: '';
    content: none;
}
table {
    border-collapse: collapse;
    border-spacing: 0;
}

/* my style */
html {
    height:100%;
}
::-moz-selection {
    background:#e67e22;
    color:white;
}
::selection {
    background:#e67e22;
    color:white;
}
body {
    margin:0;
    padding:0 0 0 200px;
    font-size:14px;
    font-family:"Open Sans","Helvetica Neue",Helvetica,Arial,STHeiti,sans-serif;
    color:#666;
}

hr {
    border-width:2px;
}

table,p {
    margin-bottom:15px;
}

tr {
    border-bottom:1px solid #999;
}
th {
    background:#EEE;
}
td,th {
    border-right:1px dotted #999;
    padding:0 10px;
}
td:last-child,
th:last-child {
    border-right:none;
}

code {
    color:lightcoral;
    background:beige;
}

a {
    color:#CF492E;
    text-decoration:none;
    transition:none;
    -webkit-transition:none;
}

a:hover {
    color:#CF492E;
    text-decoration:none;
    transition:.25s;
    -webkit-transition:.25s;
}

.cf {
    zoom:1;
}

.cf:after {
    content:'';
    display:block;
    clear:both;
    height:0;
    overflow:hidden;
    visibility:hidden;
}
h1, .h1 {
    font-size:24px;
    color:#333;
}
h2, .h2 {
