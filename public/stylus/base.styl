/* gallery */
.pg-pic {
    width:100%;
}
.pg-pic .body {
    width:100%;
}
.pg-pic .content {
    width:100%;
    min-height:500px;
}
.pg-pic .fold-list {
    margin-top:50px;
}
.pg-pic .fold {
    float:left;
    margin:0 30px 50px 0;
    padding:10px 0 12px;
    background-color:#FFF;
    box-shadow:1px 1px 3px 1px #BBB;
}
.pg-pic .fold img {
    display:block;
    padding:0 5px;
}
.pg-pic .fold span {
    display:block;
    height:35px;
    line-height:35px;
    text-align:center;
    font-size:16px;
    color:#CF492E;
    box-shadow:0 3px 0 0 #FFF,0 4px 0 0 #bbb,0 6px 0 0 #FFF,0 7px 0 0 #BBB,0 9px 0 0 #FFF,0 10px 0 0 #BBB;
}
.pg-pic .fold:hover {
    box-shadow:1px 1px 10px 3px #BBB;
}

.pg-pic .pic {
    position:relative;
    display:block;
}

.pg-pic .pic--stack {
    margin-top:-500px;
}

.pg-pic .pic:hover {
    z-index:100;
    box-shadow:-2px 1px 20px 0 #CCC;
}

.pg-pic .pic span {
    position:absolute;
    bottom:-1px;
    left:0;
    right:0;
    height:30px;
    line-height:30px;
    text-align:center;
    font-size:16px;
    color:#FFF;
    background:#333;
}

@-webkit-keyframes show {
    from {
        -webkit-transform:rotate3d(0,1,0,-180deg);
    }

    to {
        -webkit-transform:rotate3d(0,1,0,0deg);
    }
}

@-ms-keyframes show {
    from {
        transform:rotate3d(0,1,0,-180deg);
    }

    to {
        transform:rotate3d(0,1,0,0deg);
    }
}

@-moz-keyframes show {
    from {
        -moz-transform:rotate3d(0,1,0,-180deg);
    }

    to {
        -moz-transform:rotate3d(0,1,0,0deg);
    }
}

@-webkit-keyframes hidden {
    from {
        -webkit-transform:rotate3d(0,1,0,0);
    }

    to {
        -webkit-transform:rotate3d(0,1,0,180deg);
    }
}

@-ms-keyframes hidden {
    from {
        transform:rotate3d(0,1,0,0);
    }

    to {
        transform:rotate3d(0,1,0,180deg);
    }
}

@-moz-keyframes hidden {
    from {
        -moz-transform:rotate3d(0,1,0,0);
    }

    to {
        -moz-transform:rotate3d(0,1,0,180deg);
    }
}

