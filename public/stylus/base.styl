    border-bottom:1px solid #dcdcdc;
    padding-bottom:5px;
    color:#333;
}
h3, .h3 {
    font-size:18px;
    color:#333;
}
h4, .h4 {
    font-size:16px;
    color:#333;
}
h5, .h5 {
    font-size:14px;
    font-weight:bold;
    color:#333;
}

header {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    margin: 0;
    padding:0;
    width: 100%;
    background: #121212;
    z-index: 100;
    transition:width .5s ease-in;
    -webkit-transition:width .6s ease;
}

.header--simple {
    width:200px;
}

.header--anim {
    width:200px;
}

.up-top {
    position:fixed;
    bottom:20px;
    right:20px;
    font-size:32px;
    cursor:pointer;
}

header .title {
    margin:0 0 20px;
    padding:30px 0 10px;
    text-align:center;
    font-size:20px;
    background:rgba(0, 0, 0, 0.4);
}

header .title .avatar {
    display:block;
    margin:0 auto 10px;
    border-radius 5px;
    text-align:center;
}

header .title a {
    color:#FFF;
}

header .slogan {
    margin-bottom:10px;
    padding-right:10px;
    width:100%;
    text-align:center;
    font-size:12px;
    color:#666;
}

header .nav {
    margin-bottom:10px;
    list-style:none;
}

header .nav li {
    transform:rotate3d(1, 0, 0, 180deg);
    -webkit-transform:rotate3d(1, 0, 0, 180deg);
    -webkit-backface-visibility:hidden;
    backface-visibility:hidden;
}

header .nav .li--anim {
    transition:transform .3s .5s linear;
    -webkit-transition:-webkit-transform .3s .5s linear;
    transform:rotate3d(1, 0, 0, 0);
    -webkit-transform:rotate3d(1, 0, 0, 0);
}

header .nav li a {
    font-size:12px;
    color:#AAA;
}

header .nav li a:hover {
    color:#DDD;
    background:#000;
}

header .social {
    padding-left:10px;
    transform:rotate3d(1, 0, 0, 180deg);
    -webkit-transform:rotate3d(1, 0, 0, 180deg);
    -webkit-backface-visibility:hidden;
    backface-visibility:hidden;
}

header .social--anim {
    transition:transform .3s 1.3s linear;
    -webkit-transition:-webkit-transform .3s 1.3s linear;
    transform:rotate3d(1, 0, 0, 0);
    -webkit-transform:rotate3d(1, 0, 0, 0);
}

header .social a {
    margin-right:10px;
    font-size:24px;
    color:#AAA;
    transition:transform .3s ease-in;
    -webkit-transition:-webkit-transform .3s ease-in;
}

